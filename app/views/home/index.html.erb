<div class="bg-white">
  <div class="mx-auto max-w-2xl px-4 py-16 sm:px-6 sm:py-24 lg:max-w-7xl lg:px-8">
    <h2 class="sr-only">Products</h2>
    <div class="grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 xl:gap-x-8">
      <% @properties.each do |property| %>
        <a href="#" class="group">
          <div class="aspect-h-2 aspect-w-2 w-full overflow-hidden rounded-lg bg-gray-200">
            <%= image_tag property.image_url,
            alt:"Product image",
            class:"min-h-[200px] max-h-[200px] h-full w-full object-cover object-center group-hover:opacity-75"%>
          </div>
          <div class="flex justify-between text-sm text-gray-700 mt-4">
            <div>
              <span class="left-text"> Rating <%= format('%.1f', property.average_rating) %> </span>
            </div>
            <div>
              <%= button_to 'Add to Wishlist', 
                api_wishlists_path, 
                method: :post, 
                params: { 
                  property_id: property.id, 
                  user_id: 7 
                }, 
                remote: true, 
                class: 'wishlist-link font-xl text-red-500' 
              %>
            </div>
          </div>
          <div id="wishlist-message"></div>
          <div id="wishlist-message"></div>
          <h3 class="mt-1 text-sm text-gray-700"> <%= property.name %></h3>
          <h3 class="mt-1 text-sm text-gray-700"> <%= property.state %>, <%= property.country %> </h3>
          <p class="mt-1 text-lg font-medium text-gray-900"> <%= property.price %> BDT night</p>
        </a>
      <% end %>
    </div>
  </div>
</div>
